@page
@model MidtermTodos.Pages.Todos.TodoAddModel

@{
    ViewData["Title"] = "Create Todo";
}

<h1>@ViewData["Title"]</h1>

<h4>Todo</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Task" class="control-label"></label>
                <div class="col-sm-10">
                    <textarea asp-for="Task" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Task" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="DueDate" class="control-label"></label>
                <input asp-for="DueDate" class="form-control" min="2000-01-01" max="2099-12-31" />
                <span asp-validation-for="DueDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsDone"/> @Html.DisplayNameFor(model => model.IsDone)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
                <a asp-page="/index" class="btn btn-danger">Cancel</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Index">Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}