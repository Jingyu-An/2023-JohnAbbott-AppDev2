@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Article[0].Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Article[0].Body)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Article[0].Author.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Article[0].Created)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Article)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Body)
            </td>
            <td>
                @Html.DisplayFor(model => item.Author.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @if (User.Identity.Name == item.Author.UserName)
                {
                    <a asp-page="/Admin/Articles/Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-page="/Admin/Articles/Details" asp-route-id="@item.Id">Details</a>
                    <a asp-page="/Admin/Articles/Delete" asp-route-id="@item.Id">Delete</a>
                }
            </td>
        </tr>
    }
    </tbody>
</table>