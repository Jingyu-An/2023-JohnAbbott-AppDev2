@page
@model MidtermTodos.Pages.Todos.TodoDetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Todo</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Todo.Task)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Todo.Task)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Todo.DueDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Todo.DueDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Todo.IsDone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Todo.IsDone)
        </dd>
    </dl>
</div>
@if (User.Identity.Name == Model.Todo.Owner.UserName)
{
    <div>
        <a asp-page="/Todos/TodoUpdate" class="btn btn-primary" asp-route-id="@Model.Todo?.Id">Edit</a>
    </div>
}
<div>
    <a asp-page="/Index">Back to List</a>
</div>